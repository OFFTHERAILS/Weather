<h1>Listing records</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Day</th>
    <th>Time</th>
    <th>Temperature</th>
    <th>Precipitation</th>
    <th>Airpressure</th>
    <th>Windspeed</th>
    <th>Winddirection</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.Date %></td>
    <td><%= record.Day %></td>
    <td><%= record.Time %></td>
    <td><%= record.Temperature %></td>
    <td><%= record.Precipitation %></td>
    <td><%= record.AirPressure %></td>
    <td><%= record.WindSpeed %></td>
    <td><%= record.WindDirection %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

