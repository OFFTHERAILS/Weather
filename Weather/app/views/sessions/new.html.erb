<h1>LOG IN</h1>

<% if flash[:alert] %>
  <p id='notice'> <%= flash[:alert] %></p>
<%end%>

<%= form_tag do %>
<fieldset>
  <legend> Please Log In</legend>
  
  <div>
    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name, params[:name] %>
  </div>
  
  <br> </br> 
   <div>
    <%= label_tag :password, 'Password' %>
    <%= password_field_tag :password, params[:password] %>
  </div>
   <br> </br> 
  <div>
    <%= submit_tag "login"%>    
  </div>
  
</fieldset>
<% end %>
